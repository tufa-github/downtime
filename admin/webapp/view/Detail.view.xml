<mvc:View
	controllerName="com.myorg.downtimes.controller.Detail"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page title="Downtime Detail Information" showNavButton="true" navButtonPress="onNaviBack">
    <VBox>  
            <Label text="Title" />
            <Input value="{title}" width="1000px" />
            <Label text="Description" />
            <Input value="{description}" width="1000px" />
            <Label text="System" />
            <Input value="{system/title}" width="1000px" />
            <Label text="Type"/>
            <Input value="{type}" width="1000px" showValueHelp="true" valueHelpRequest="handelTypesValueHelp"/>
            <Label text="Starts At" />
            <DateTimePicker value="{startsAt}" width="1000px" />  
            <Label text="Ends At" />
            <DateTimePicker value="{endsAt}" width="1000px" />  
            <Label text="Show From" />
            <DateTimePicker value="{showFrom}" width="1000px" />  
            <Label text="Show Until" />
            <DateTimePicker value="{showUntil}" width="1000px" />  
     </VBox>
    </Page>
</mvc:View>